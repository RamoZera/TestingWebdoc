                </VerticalStackLayout>
            </ScrollView>
            <!--  Save Button  -->
            <!--<Grid Grid.Row="2" Padding="20,0">
                <Button
                    BackgroundColor="{StaticResource Gray400}"
                    Clicked="ShowSavePopup"
                    IsEnabled="False"
                    Text="Gravar"
                    TextColor="White" />
            </Grid>-->
        </Grid>
        <!--  Modal Loader  -->
        <Grid
            x:Name="ModalLoader"
            IsVisible="{Binding GbLoader}"
            RowDefinitions="auto,*">
            <Grid
                Grid.Row="0"
                Padding="20"
                BackgroundColor="#BF000000"
                Opacity="1">
                <Border
                    Padding="15"
                    Background="White"
                    StrokeShape="RoundRectangle 16"
                    StrokeThickness="1">
                    <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                        <Border
                            Grid.Column="0"
                            Padding="5"
                            Background="{StaticResource Secondary}"
                            HeightRequest="54"
                            StrokeShape="RoundRectangle 50"
                            StrokeThickness="1"
                            WidthRequest="54">
                            <ActivityIndicator
                                BackgroundColor="Transparent"
                                HeightRequest="30"
                                IsRunning="True"
                                WidthRequest="30"
                                Color="White" />
                        </Border>
                        <VerticalStackLayout Grid.Column="1">
                            <Label
                                FontFamily="RobotoBold"
                                FontSize="22"
                                HorizontalTextAlignment="Start"
                                Text="Aguarde"
                                TextColor="#1F2125" />
                            <Label
                                FontFamily="RobotoBold"
                                FontSize="16"
                                HorizontalTextAlignment="Start"
                                Text="Validação em progresso"
                                TextColor="#959595" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </Grid>
            <Grid
                Grid.Row="1"
                BackgroundColor="#000000"
                Opacity="0.75" />
        </Grid>
    </Grid>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Grid x:Key="NewDocumentPopup">
                <Frame
                    Margin="0,0,0,-10"
                    BorderColor="Transparent"
                    CornerRadius="16"
                    HeightRequest="380">
                    <StackLayout Padding="0" Spacing="40">
                        <!--  Header Popup  -->
                        <Grid RowDefinitions="*,*" RowSpacing="20">
                            <!--  Title  -->
                            <Label
                                FontFamily="RobotoBold"
                                FontSize="18"
                                HorizontalTextAlignment="Start"
                                Text="Adicionar documento"
                                TextColor="Black" />

                            <!--  Close Button  -->
                            <Frame
                                Margin="0,0,15,0"
                                Padding="0"
                                BackgroundColor="#EBEBEB"
                                BorderColor="Transparent"
                                CornerRadius="30"
                                HeightRequest="30"
                                HorizontalOptions="End"
                                WidthRequest="30">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ClosePopup" />
                                </Frame.GestureRecognizers>
                                <Frame.Content>
                                    <Grid>
                                        <Image Aspect="AspectFit" Source="icon_close" />
                                    </Grid>
                                </Frame.Content>
                            </Frame>

                            <!--  Description  -->
                            <Label
                                Grid.Row="1"
                                FontFamily="RobotoRegular"
                                FontSize="16"
                                LineHeight="1.2"
                                Text="Seleciona uma das opções abaixo indicadas para inserires o documento atrvés do teu dispositivo"
                                TextColor="#959595" />
                        </Grid>


                        <!--  Button Actions  -->
                        <Grid RowDefinitions="*,*" RowSpacing="10">
                            <!--  Create new Document Button  -->
                            <Frame
                                BackgroundColor="#FFFFFF"
                                BorderColor="#EBEBEB"
                                CornerRadius="4"
                                HeightRequest="80">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                </Frame.GestureRecognizers>
                                <Grid>
                                    <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                                        <Frame
                                            Padding="10"
                                            BackgroundColor="#EBEBEB"
                                            BorderColor="Transparent"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            WidthRequest="40">
                                            <Grid>
                                                <Image Aspect="AspectFit" Source="icon_carregar" />
                                            </Grid>
                                        </Frame>
                                        <Label
                                            Grid.Column="1"
                                            FontFamily="RobotoBold"
                                            FontSize="20"
                                            HorizontalTextAlignment="Start"
                                            Text="Carregar do dispositivo "
                                            TextColor="Black"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                </Grid>
                            </Frame>

                            <!--  Create new Process Button  -->
                            <Frame
                                Grid.Row="1"
                                BackgroundColor="#FFFFFF"
                                BorderColor="#EBEBEB"
                                CornerRadius="4"
                                HeightRequest="80">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizerCamera_Tapped" />
                                </Frame.GestureRecognizers>
                                <Grid>
                                    <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                                        <Frame
                                            Padding="10"
                                            BackgroundColor="#EBEBEB"
                                            BorderColor="Transparent"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            WidthRequest="40">
                                            <Grid>
                                                <Image Aspect="AspectFit" Source="icon_digitalizar" />
                                            </Grid>
                                        </Frame>
                                        <Label
                                            Grid.Column="1"
                                            FontFamily="RobotoBold"
