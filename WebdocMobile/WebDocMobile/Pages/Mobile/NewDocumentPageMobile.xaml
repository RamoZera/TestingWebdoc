<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WebDocMobile.Pages.Mobile.NewDocumentPageMobile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControl="clr-namespace:WebDocMobile.CustomControls"
    xmlns:local="clr-namespace:WebDocMobile.PageModels.PagesViewModels"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    xmlns:vm="clr-namespace:WebDocMobile.PageModels.PagesViewModels"
    Title="NewDocumentPageMobile"
    x:DataType="vm:NewDocumentPageViewModel"
    BackgroundColor="#F6F6F6">

    <Grid>
        <Grid RowDefinitions=".2*,*,.1*">
            <!--  Header  -->
            <customControl:Header>
                <Grid ColumnDefinitions="*,auto" VerticalOptions="Center">
                    <VerticalStackLayout Spacing="5">
                        <Label
                            FontFamily="RobotoMedium"
                            FontSize="12"
                            Text="DOCUMENTOS"
                            TextColor="#F1F1F1" />
                        <Label
                            FontFamily="RobotoBold"
                            FontSize="28"
                            Text="Novo registo"
                            TextColor="White" />
                    </VerticalStackLayout>
                    <Button
                        Grid.Column="1"
                        BackgroundColor="#3C2D33"
                        Clicked="ShowCancelPopup"
                        CornerRadius="4"
                        FontAttributes="Bold"
                        FontFamily="RobotoMedium"
                        FontSize="12"
                        HeightRequest="40"
                        HorizontalOptions="End"
                        Opacity="0.9"
                        Text="Cancelar"
                        TextColor="#DD4A4B"
                        VerticalOptions="Center" />
                </Grid>

            </customControl:Header>
            <!--  Content Page  -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="20">
                    <VerticalStackLayout
                        Padding="20"
                        Background="White"
                        Spacing="20">
                        <Label
                            FontFamily="RobotoBold"
                            FontSize="22"
                            Text="Documento"
                            TextColor="#1F2125" />
                        <Border
                            Padding="20"
                            Background="#EDF0F4"
                            Stroke="#0074C8"
                            StrokeDashArray="5,5"
                            StrokeDashOffset="1.0"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="1">
                            <Grid RowDefinitions="*,*,*" RowSpacing="15">
                                <Image
                                    Grid.Row="0"
                                    HeightRequest="24"
                                    Source="icon_carregar" />
                                <Label
                                    Grid.Row="1"
                                    FontFamily="RobotoBold"
                                    FontSize="18"
                                    HorizontalTextAlignment="Center"
                                    Text="Insira o seu ficheiro"
                                    TextColor="#2B2B2B" />
                                <Button
                                    Grid.Row="2"
                                    BackgroundColor="#0074C8"
                                    Clicked="ShowPopup"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    Text="Selecionar"
                                    TextColor="White" />
                            </Grid>
                        </Border>

                    </VerticalStackLayout>

                    <!--<VerticalStackLayout
                        Padding="20"
                        Background="White"
                        Spacing="20">
                        <Label
                            FontFamily="RobotoBold"
                            FontSize="22"
                            Text="Dados"
                            TextColor="#1F2125" />
                        --><!--  Input Asunto  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid>
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Assunto"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadEntry
                                    x:Name="Topic"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    FocusedBorderBrush="Transparent"
                                    FocusedBorderThickness="0,0,0,0"
                                    FontSize="16"
                                    Placeholder="Escreva os detalhes necessários"
                                    PlaceholderColor="#343A40"
                                    Text="{Binding Topic.Value, Mode=TwoWay}"
                                    Unfocused="TopicEntry_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding Topic.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />

                            </VerticalStackLayout>
                        </Border>

                        --><!--  Combo Book  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid>
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Livro"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadComboBox
                                    x:Name="BookR"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    ItemsSource="{Binding Book1}"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados resultados."
                                    Text="{Binding BookR.Value, Mode=TwoWay}"
                                    Unfocused="BookR_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding BookR.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        --><!--  Combo Type  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid>
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Tipo"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadComboBox
                                    x:Name="Type"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    ItemsSource="{Binding DocumentType}"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados itens."
                                    Text="{Binding Type.Value, Mode=TwoWay}"
                                    Unfocused="Type_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding Type.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        --><!--  Combo Envio / Receção  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid>
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Envio / Receção"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadComboBox
                                    x:Name="SendR"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    ItemsSource="{Binding SendReceive}"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados resultados."
                                    Text="{Binding SendR.Value, Mode=TwoWay}"
                                    Unfocused="SendR_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding SendR.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        --><!--  Combo Classificador  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid Grid.Row="0">
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Classificador"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadComboBox
                                    x:Name="Classify"
                                    Grid.Row="1"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    ItemsSource="{Binding Classify}"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados resultados."
                                    Text="{Binding Classifier.Value, Mode=TwoWay}"
                                    Unfocused="Classify_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding Classifier.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        --><!--  Data Picker Carimbo  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Data de carimbo"
                                    TextColor="#959595" />
                                <telerik:RadDatePicker
                                    x:Name="DataCarimbo"
                                    AutomationId="datePicker"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    DisplayLabelStyle="{StaticResource displayLabelStyleDatePicker}"
                                    Placeholder="Defina uma data"
                                    PlaceholderLabelStyle="{StaticResource placeholderLabelStyleDatePicker}"
                                    Style="{StaticResource RadDatePickerStyle}"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        --><!--  Data Picker límite de Resposta  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Data límite de Resposta"
                                    TextColor="#959595" />
                                <telerik:RadDatePicker
                                    x:Name="Datalimit"
                                    AutomationId="datePicker"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    DisplayLabelStyle="{StaticResource displayLabelStyleDatePicker}"
                                    Placeholder="Defina uma data"
                                    PlaceholderLabelStyle="{StaticResource placeholderLabelStyleDatePicker}"
                                    Style="{StaticResource RadDatePickerStyle}"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        --><!--  Data Picker do documento  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Data do documento"
                                    TextColor="#959595" />
                                <telerik:RadDatePicker
                                    x:Name="DataDocumento"
                                    AutomationId="datePicker"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    DisplayLabelStyle="{StaticResource displayLabelStyleDatePicker}"
                                    Placeholder="Defina uma data"
                                    PlaceholderLabelStyle="{StaticResource placeholderLabelStyleDatePicker}"
                                    Style="{StaticResource RadDatePickerStyle}"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        --><!--  Input Referencia  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Referência"
                                    TextColor="#959595" />
                                <telerik:RadEntry
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    FocusedBorderBrush="Transparent"
                                    FocusedBorderThickness="0,0,0,0"
                                    FontSize="16"
                                    Placeholder="Escreva a referência"
                                    PlaceholderColor="#343A40"
                                    Unfocused="TopicEntry_Unfocused" />
                            </VerticalStackLayout>
                        </Border>

                        --><!--  Input Observações  --><!--
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Observações"
                                    TextColor="#959595" />
                                <telerik:RadEntry
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    FocusedBorderBrush="Transparent"
                                    FocusedBorderThickness="0,0,0,0"
                                    FontSize="16"
                                    Placeholder="Escreva detalhes ou comentários"
                                    PlaceholderColor="#343A40"
                                    Unfocused="TopicEntry_Unfocused" />
                            </VerticalStackLayout>
                        </Border>

                        
                    </VerticalStackLayout>

                    <VerticalStackLayout
                        Padding="20"
                        Background="White"
                        Spacing="20">
                        <Label
                            FontFamily="RobotoBold"
                            FontSize="22"
                            Text="Entidade"
                            TextColor="#1F2125" />
                        --><!--  Input Entidade  -->
                        <!--<Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
