                            <Frame
                                Margin="0,0,15,0"
                                Padding="0"
                                BackgroundColor="#EBEBEB"
                                BorderColor="Transparent"
                                CornerRadius="30"
                                HeightRequest="30"
                                HorizontalOptions="End"
                                WidthRequest="30">
                                <Frame.GestureRecognizers>
