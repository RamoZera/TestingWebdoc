<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="WebDocMobile.Pages.Mobile.ComprovativoPageMobile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControl="clr-namespace:WebDocMobile.CustomControls"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:local="clr-namespace:WebDocMobile.Pages.Mobile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    Title="ComprovativoPageMobile"
    mc:Ignorable="d">
    <Grid>
        <!--  Main Content  -->
        <Grid BackgroundColor="#F6F6F6" RowDefinitions=".1*,*" >
            <!--  Header  -->
            <customControl:Header>
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Grid Grid.Column="0">
                        <Button
                            x:Name="ReturnButton"
                            BackgroundColor="{StaticResource Primary}"
                            BorderColor="#FFFFFF"
                            BorderWidth="1"
                            Clicked="ReturnButton_Clicked"
                            CornerRadius="4"
                            HeightRequest="50"
                            HorizontalOptions="StartAndExpand"
                            Opacity="0.15"
                            WidthRequest="50" />
                        <Image
                            HeightRequest="24"
                            RotationY="180"
                            Source="icon_anterior" />
                    </Grid>

                    <Grid Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                        <StackLayout Spacing="0" HorizontalOptions="FillAndExpand" Padding="10,0,10,0">
                            <Label
                                FontFamily="RobotoMedium"
                                FontSize="12"
                                HorizontalOptions="Start"
                                Text="Documento"
                                TextColor="#F1F1F1" />
                            <Label
                                x:Name="NumberText"
                                FontFamily="RobotoBold"
                                FontSize="20"
                                HorizontalOptions="StartAndExpand"
                                LineBreakMode="TailTruncation"  
                                Text=""
                                ToolTipProperties.Text=""
                                TextColor="White" />
                        </StackLayout>
                    </Grid>


                    <HorizontalStackLayout
                            Grid.Column="2"
                            HorizontalOptions="End"
                            Spacing="10"
                            VerticalOptions="Center">
                        <Grid>
                            <Button
                                BackgroundColor="Transparent"
                                BorderColor="#FFFFFF"
                                BorderWidth="1"
                                Clicked="ButtonDownload_Clicked"
                                CornerRadius="4"
                                HeightRequest="50"
                                Opacity="0.15"
                                WidthRequest="50" />
                            <Image HeightRequest="24" Source="icon_download" />
                        </Grid>
                        <Grid>
                            <Button
                                BackgroundColor="Transparent"
                                BorderColor="#FFFFFF"
                                BorderWidth="1"
                                Clicked="Button_Clicked"
                                CornerRadius="4"
                                HeightRequest="50"
                                Opacity="0.15"
                                WidthRequest="50" />
                            <Image HeightRequest="24" Source="icon_funcionalidades" />
                        </Grid>
                    </HorizontalStackLayout>
                </Grid>
            </customControl:Header>


            <!--  Content Page  -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="20">
                    <VerticalStackLayout Padding="20" Background="#262930">
                        <Label
                            x:Name="Assunto"
                            FontFamily="RobotoMedium"
                            FontSize="24"
                            Text="{Binding Assunto.Value, Mode=TwoWay}"
                            TextColor="#FFFFFF" />
                    </VerticalStackLayout>
                    <VerticalStackLayout
                        Margin="0,-20,0,0"
                        Padding="20"
                        Background="White"
                        Spacing="20">
                        <Label
                            FontFamily="RobotoBold"
                            FontSize="22"
                            Text="Documento"
                            TextColor="#1F2125" />
                        <Image x:Name="imgPhotoC" />
                    </VerticalStackLayout>
                    <VerticalStackLayout
                        Padding="20"
                        Background="White"
                        Spacing="10">
                        <Label
                            FontFamily="RobotoBold"
                            FontSize="22"
                            Text="Dados"
                            TextColor="#1F2125" />

                        <!--  Combo Book  -->
                        <Border
                            x:Name="BookCard"
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid>
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Livro"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadComboBox
                                    x:Name="BookR"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados resultados."
                                    ItemsSource="{Binding Book1}"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    Text="{Binding BookR.Value, Mode=TwoWay}"
                                    Unfocused="BookR_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding BookR.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Combo Type  -->
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid>
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Tipo"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadComboBox
                                    x:Name="Type"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados resultados."
                                    ItemsSource="{Binding DocumentType}"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    Text="{Binding Type.Value, Mode=TwoWay}"
                                    Unfocused="Type_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding Type.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Combo Envio / Receção  -->
                        <Border
                            x:Name="SendRCard"
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid>
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Envio / Receção"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadComboBox
                                    x:Name="SendR"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados resultados."
                                    ItemsSource="{Binding SendReceive}"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    Text="{Binding SendR.Value, Mode=TwoWay}"
                                    Unfocused="SendR_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding SendR.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Combo Classificador  -->
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Grid Grid.Row="0">
                                    <Label
                                        Margin="7,0,0,0"
                                        FontFamily="RobotoMedium"
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="Classificador"
                                        TextColor="#959595" />
                                    <Image
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        Source="chip_required" />
                                </Grid>
                                <telerik:RadComboBox
                                    x:Name="Classify"
                                    Grid.Row="1"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados resultados."
                                    ItemsSource="{Binding Classify}"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    Text="{Binding Classifier.Value, Mode=TwoWay}"
                                    Unfocused="Classify_Unfocused" />
                                <Label
                                    FontSize="16"
                                    IsVisible="False"
                                    Text="{Binding Classifier.Error}"
                                    TextColor="Red"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Data Picker Carimbo  -->
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Data de carimbo"
                                    TextColor="#959595" />
                                <telerik:RadDatePicker
                                    x:Name="DataCarimbo"
                                    AutomationId="datePicker"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    DisplayLabelStyle="{StaticResource displayLabelStyleDatePicker}"
                                    Placeholder="Defina uma data"
                                    PlaceholderLabelStyle="{StaticResource placeholderLabelStyleDatePicker}"
                                    Style="{StaticResource RadDatePickerStyle}"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Data Picker límite de Resposta  -->
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Data límite de Resposta"
                                    TextColor="#959595" />
                                <telerik:RadDatePicker
                                    x:Name="DataReference"
                                    AutomationId="datePicker"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    DisplayLabelStyle="{StaticResource displayLabelStyleDatePicker}"
                                    Placeholder="Defina uma data"
                                    PlaceholderLabelStyle="{StaticResource placeholderLabelStyleDatePicker}"
                                    Style="{StaticResource RadDatePickerStyle}"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Data Picker do documento  -->
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Data do documento"
                                    TextColor="#959595" />
                                <telerik:RadDatePicker
                                    x:Name="DataDocumento"
                                    AutomationId="datePicker"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    DisplayLabelStyle="{StaticResource displayLabelStyleDatePicker}"
                                    Placeholder="Defina uma data"
                                    PlaceholderLabelStyle="{StaticResource placeholderLabelStyleDatePicker}"
                                    Style="{StaticResource RadDatePickerStyle}"
                                    VerticalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Input Referência  -->
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Referência"
                                    TextColor="#959595" />
                                <telerik:RadEntry
                                    x:Name="Reference"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    FocusedBorderBrush="Transparent"
                                    FocusedBorderThickness="0,0,0,0"
                                    FontSize="16"
                                    Placeholder="Escreva a referência"
                                    PlaceholderColor="#343A40" />
                            </VerticalStackLayout>
                        </Border>

                        <!--  Input Observações  -->
                        <Border
                            HorizontalOptions="FillAndExpand"
                            Stroke="#ADB3BC"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness="2">
                            <VerticalStackLayout Padding="10">
                                <Label
                                    Margin="7,0,0,0"
                                    FontFamily="RobotoMedium"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="Observações"
                                    TextColor="#959595" />
                                <telerik:RadEntry
                                    x:Name="Observations"
                                    AutomationId="radEntry"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    FocusedBorderBrush="Transparent"
                                    FocusedBorderThickness="0,0,0,0"
                                    FontSize="16"
                                    Placeholder="Escreva detalhes ou comentários"
                                    PlaceholderColor="#343A40"
                                    Text="{Binding}" />
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout
                        Padding="20"
                        Background="White"
                        Spacing="20">
                            <Label
                                FontFamily="RobotoBold"
                                FontSize="22"
                                Text="Entidade"
                                TextColor="#1F2125" />

                            <!--  Combo Entidade  -->
                            <Border
                                HorizontalOptions="FillAndExpand"
                                Stroke="#ADB3BC"
                                StrokeShape="RoundRectangle 5"
                                StrokeThickness="2">
                                <VerticalStackLayout Padding="10">
                                    <Grid>
                                        <Label
                                            Margin="7,0,0,0"
                                            FontFamily="RobotoMedium"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            Text="Entidade"
                                            TextColor="#959595" />
                                        <Image
                                            HeightRequest="24"
                                            HorizontalOptions="End"
                                            Source="chip_required" />
                                    </Grid>
                                <telerik:RadComboBox
                                    x:Name="Entity"
                                    AutomationId="radEntry"
                                    ItemsSource="{Binding entity}"
                                    BackgroundColor="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,0"
                                    DisplayMemberPath="Name"
                                    FocusedBorderBrush="Transparent"
                                    FontSize="16"
                                    HorizontalOptions="Fill"
                                    Placeholder="Selecione uma opção"
                                    PlaceholderColor="#343A40"
                                    SelectionMode="Single"
                                    IsEditable="True"
                                    IsFilteringEnabled="True"
                                    SearchTextPath="Name"
                                    SearchMode="Contains"
                                    NoResultsMessage="Não foram encontrados resultados."
                                    Text="{Binding Entity.Value, Mode=TwoWay}" /> 
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout
                        Padding="20"
                        Background="White"
                        Spacing="10">
                        <Grid>
                            <Label
                            FontFamily="RobotoBold"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Text="Aguarda Resposta"
                            TextColor="Black"
                            VerticalOptions="Center" />
                            <Switch
                            x:Name="AguardaResposta"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                        </Grid>
                        <BoxView HeightRequest="2" Color="#EBEBEB" />
                        <Grid>
                            <Label
                            FontFamily="RobotoBold"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Text="Urgente"
                            TextColor="Black"
                            VerticalOptions="Center" />
                            <Switch
                            x:Name="Urgente"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                        </Grid>
                        <BoxView HeightRequest="2" Color="#EBEBEB" />
                        <Grid>
                            <Label
                            FontFamily="RobotoBold"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Text="Confidencial"
                            TextColor="Black"
                            VerticalOptions="Center" />
                            <Switch
                            x:Name="Confidencial"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                        </Grid>
                        <BoxView HeightRequest="2" Color="#EBEBEB" />
                        <Grid>
                            <Label
                            FontFamily="RobotoBold"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Text="Em Tratamento"
                            TextColor="Black"
                            VerticalOptions="Center" />
                            <Switch
                            x:Name="EmTratamento"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                        </Grid>
                        <BoxView HeightRequest="2" Color="#EBEBEB" />
                        <Grid>
                            <Label
                            FontFamily="RobotoBold"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Text="Documento Sem Resposta"
                            TextColor="Black"
                            VerticalOptions="Center" />
                            <Switch
                            x:Name="DocumentoSemResposta"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                        </Grid>
                        <BoxView HeightRequest="2" Color="#EBEBEB" />
                        <Grid>
                            <Label
                            FontFamily="RobotoBold"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Text="Suporte papel"
                            TextColor="Black"
                            VerticalOptions="Center" />
                            <Switch
                            x:Name="SuportePapel"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                        </Grid>
                    </VerticalStackLayout>


                    <VerticalStackLayout Padding="30">
                    </VerticalStackLayout>
                    
                </VerticalStackLayout>

            </ScrollView>
        </Grid>

        <Frame
            CornerRadius="30"
            HasShadow="True"
            BorderColor="LightGray"
            BackgroundColor="White"
            Padding="10,0,10,0"
            Margin="10,20"
            HorizontalOptions="Center"
            VerticalOptions="End"
            HeightRequest="50">
            <Grid ColumnDefinitions="*,Auto,Auto" VerticalOptions="CenterAndExpand">
                <!-- Label de Check-in -->
                <Label
                    Text="Check-in"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    FontFamily="RobotoBold"
                    FontAttributes="Bold"
                    TextColor="#959595" Padding="0,0,10,0" />
                <!-- Switch personalizado -->
                <Frame 
                    x:Name="SwitchFrame"
                    Grid.Column="1"  
                    HorizontalOptions="Center" 
                    CornerRadius="100"
                    WidthRequest="80"
                    HeightRequest="35"
                    BackgroundColor="#0D7655" 
                    BorderColor="Transparent">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFrameTapped" />
                    </Frame.GestureRecognizers>

                    <Grid                     
                        WidthRequest="80"
                        HeightRequest="40">

                        <BoxView
                            x:Name="SwitchThumb"
                            HeightRequest="18"
                            WidthRequest="18"
                            CornerRadius="50"
                            Color="White"
                            Margin="0,0,5,0"
                            HorizontalOptions="End"
                            VerticalOptions="Center"></BoxView>

                        <Image  
                                x:Name="FirstImage"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                HeightRequest="18"
                                Margin="0,0,10,0"
                                Source="icon_cadeadoaberto" ></Image>

                        <Image  
                            x:Name="SecondImage"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            HeightRequest="18"
                            Margin="10,0,0,0"
                            Source="icon_cadeadofechado" 
                            IsVisible="False"></Image>
                    </Grid>

                </Frame>

                <Switch 
                    x:Name="CheckOutIn"
                    IsVisible="False"
                    ></Switch>
                <!-- Ícones adicionais -->
                <ImageButton
                    x:Name="OpcoesImage"
                    Grid.Column="2"
                    Source="icon_opcoes" 
                    BackgroundColor="Transparent"
                    HeightRequest="20"
                    WidthRequest="20"
                    Margin="15,0,5,0"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Clicked="Open_OptionsDocumentPopup" />
            </Grid>
        </Frame>

        

        <!--  Modal Loader  -->
        <Grid
            x:Name="ModalLoader"
            IsVisible="false"
            RowDefinitions="auto,*">
            <Grid
                Grid.Row="0"
                Padding="20"
                BackgroundColor="#BF000000"
                Opacity="1">
                <Border
                    Padding="15"
                    Background="White"
                    StrokeShape="RoundRectangle 16"
                    StrokeThickness="1">
                    <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                        <Border
                            Grid.Column="0"
                            Padding="5"
                            Background="{StaticResource Secondary}"
                            HeightRequest="54"
                            StrokeShape="RoundRectangle 50"
                            StrokeThickness="1"
                            WidthRequest="54">
                            <ActivityIndicator
                                BackgroundColor="Transparent"
                                HeightRequest="30"
                                IsRunning="True"
                                WidthRequest="30"
                                Color="White" />
                        </Border>
                        <VerticalStackLayout Grid.Column="1">
                            <Label
                                FontFamily="RobotoBold"
                                FontSize="22"
                                HorizontalTextAlignment="Start"
                                Text="Aguarde"
                                TextColor="#1F2125" />
                            <Label
                                FontFamily="RobotoBold"
                                FontSize="16"
                                HorizontalTextAlignment="Start"
                                Text="Validação em progresso"
                                TextColor="#959595" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </Grid>
            <Grid
                Grid.Row="1"
                BackgroundColor="#000000"
                Opacity="0.75" />
        </Grid>
    </Grid>

    <ContentPage.Resources>
        <Grid x:Key="OptionsDocumentPopup">
            <Frame
                Margin="0,0,0,-10"
                BorderColor="Transparent"
                CornerRadius="16"
                HeightRequest="300"
                WidthRequest="400">
                <StackLayout Padding="0" Spacing="40">
                    <!--  Header Popup  -->
                    <Grid RowDefinitions="*,*" RowSpacing="10">
                        <!--  Title  -->
                        <Label
                            FontFamily="RobotoBold"
                            FontSize="20"
                            HorizontalTextAlignment="Start"
                            Text="Opções do documento"
                            TextColor="Black" />

                        <!--  Close Button  -->
                        <Frame
                            Margin="0,0,15,0"
                            Padding="0"
                            BackgroundColor="#EBEBEB"
                            BorderColor="Transparent"
                            CornerRadius="30"
                            HeightRequest="30"
                            HorizontalOptions="End"
                            WidthRequest="30">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Close_OptionsDocumentPopup" />
                            </Frame.GestureRecognizers>
                            <Frame.Content>
                                <Grid>
                                    <Image Aspect="AspectFit" Source="icon_close" />
                                </Grid>
                            </Frame.Content>
                        </Frame>

                    </Grid>

                    <!--  Button Actions  -->
                    <Grid RowDefinitions="*,*" RowSpacing="10">
                        <!--  Consult Documents Button  -->
                        <Frame
                                BackgroundColor="#FFFFFF"
                                BorderColor="#EBEBEB"
                                CornerRadius="4"
                                HeightRequest="80">
                            <Grid>
                                <Button BackgroundColor="Transparent" Clicked="ChengeDocumentClick" />
                                <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">

                                    <Frame
                                            Padding="10"
                                            BackgroundColor="#EBEBEB"
                                            BorderColor="Transparent"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            WidthRequest="40">
                                        <Grid>
                                            <Image Aspect="AspectFit" Source="icon_documentos_blue" />
                                        </Grid>
                                    </Frame>


                                    <Label
                                            Grid.Column="1"
                                            FontFamily="RobotoBold"
                                            FontSize="20"
