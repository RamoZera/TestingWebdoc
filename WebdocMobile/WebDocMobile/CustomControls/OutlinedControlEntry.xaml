<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="WebDocMobile.CustomControls.OutlinedControlEntry"
      RowDefinitions="Auto"
      x:Name="this"
      xmlns:handlers="clr-namespace:WebDocMobile.Handlers">

    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="CommonStates">
            <VisualState x:Name="Normal">
                <VisualState.Setters>
                    <Setter TargetName="lblPlaceholder" Property="Label.FontSize" Value="16" />
                    <Setter TargetName="lblPlaceholder" Property="Label.TextColor" Value="Gray" />
                    <Setter TargetName="lblPlaceholder" Property="Label.Opacity" Value="0.5" />
                    <Setter TargetName="lblPlaceholder" Property="Label.TranslationY" Value="0" />
                </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Focused">
                <VisualState.Setters>
                    <Setter TargetName="lblPlaceholder" Property="Label.FontSize" Value="14" />
                    <Setter TargetName="lblPlaceholder" Property="Label.TextColor" Value="{StaticResource Primary}" />
                    <Setter TargetName="lblPlaceholder" Property="Label.Opacity" Value="1" />
                    <Setter TargetName="lblPlaceholder" Property="Label.TranslationY" Value="-25" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>

    <Frame Grid.Row="0"
           Padding="11,2,8,6"
           BorderColor="#0074C8"
           CornerRadius="4">
        <handlers:BorderlessEntry x:Name="txtEntry"
                                  Text="{Binding Source={x:Reference this},Path=Text}"
                                  Margin="0,5,0,0"
                                  FontFamily="RobotoFamily"/>
    </Frame>

    <Label Grid.Row="0"
           FontFamily="RobotoMedium"
           x:Name="lblPlaceholder"
           InputTransparent="True"
           Margin="10,0,10,0"
           TextColor="Gray"
           Text="{Binding Source={x:Reference this},Path=Placeholder}"
           BackgroundColor="White"
           HorizontalOptions="StartAndExpand"
           VerticalOptions="CenterAndExpand"
           Padding="5"/>
    <Grid.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
    </Grid.GestureRecognizers>

</Grid>
