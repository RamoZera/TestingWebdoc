<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="WebDocMobile.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pagesMobile="clr-namespace:WebDocMobile.Pages.Mobile"
       xmlns:pagesDesktop="clr-namespace:WebDocMobile.Pages.Desktop"
       Shell.FlyoutBehavior="Disabled"
       Shell.TabBarIsVisible="False"
       xmlns:mobilePages="clr-namespace:WebDocMobile.Pages.Mobile"
       BackgroundColor="#262930">

      <!-- 
    The Shell is now just a container for routes. The initial page is determined by the logic in AppShell.xaml.cs.
    This prevents a "flash" of a default page before navigating to the correct one.
    -->

</Shell>
